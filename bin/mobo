#!/usr/bin/env ruby
require_relative '../lib/mobo'

MOBO_DEVICES_FILE = Dir.pwd + '/.mobo-devices.yaml'

case ARGV[0]
when "up"
  Mobo.data = YAML::load_file(Dir.pwd + '/devices.yaml')
  Mobo.up
when "status"
  Mobo.data = YAML::load_file(MOBO_DEVICES_FILE)
  Mobo.status
when "destroy"
  Mobo.data = YAML::load_file(MOBO_DEVICES_FILE)
  Mobo.destroy
end